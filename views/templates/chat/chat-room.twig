{% extends 'templates/app.twig' %}

{% block content %}

<div class="container" id="chatLogArea">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <input id="author" type="hidden" name="name" value="{{ auth.user.name }}">
      <h3 class="middle" id="roomName">{{ currentRoom.room_name }}</h3>

      <div class="panel panel-body overflow" id="overflowBox">
        <div class="chat-body clearfix" id="chatBody">
          <div class="header">

              </div>
               <div id="chat">


               </div>


        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <!-- TODO at some point add js function that detects when user is typing and puts ... something like onkeyup="isTyping()"  -->
        <textarea  class="form-control" id="chatinput" rows="4" rows="8" cols="40" onkeypress="handle(event)" placeholder="Enter message"></textarea>
        <input id="sendButton" class="btn btn-success btn-block" type="submit" name="submit" value="Send"  onclick="send()">

      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="{{ base_url() }}/js/send.js"></script>

{% endblock %}

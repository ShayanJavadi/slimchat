{% extends 'templates/app.twig' %}

{% block content %}

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">Join new chat room</div>
        <div class="panel-body">

          <!-- takes us to the post path for signup -->
          <form action="{{ path_for('chat.join-room')}}" method="post" autocomplete="off">


            <div class="form-group{{ errors.roomName ? ' has-error' : ''}}">
              <label for="roomName">Room name</label>
              <input type="name" name="roomName" id="roomName" class="form-control" value="{{ old.name}}">
              {% if errors.roomName %}
              <span class="help-block">{{ errors.roomName | first }}</span>
              {% endif %}
            </div>

            <div class="form-group{{ errors.roomPassword ? ' has-error' : ''}}">
              <label for="roomPassword">Room password</label>
              <input type="password" name="roomPassword" id="roomPassword" class="form-control">
              {% if errors.roomPassword %}
              <span class="help-block">{{ errors.roomPassword | first }}</span>
              {% endif %}
            </div>
            <button type="submit" class="btn btn-default">Join room</button>
            <!-- the hidden csrf field -->
            {{ csrf.field | raw }}
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

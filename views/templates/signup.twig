{% extends 'templates/app.twig' %}

{% block content %}
{% if auth.isLoggedIn %}
  <script type="text/javascript">
    window.location = "/TwitterClone/public" ;
  </script>
{% endif %}
  <div class="row paddingTop">
    <div class="col-md-6 col-md-offset-3 ">
      <h1 >Welcome to SlimChat</h1>
      <h3>Sign up to start chatting away</h3>
      <div class="panel panel-default">
        <div class="panel-heading">Sign up</div>
        <div class="panel-body">

          <!-- takes us to the post path for signup -->
          <form action="{{ path_for('auth.signup')}}" method="post" autocomplete="off">
            <!-- if there are any errors in each catogery -->
            <div class="form-group{{ errors.email ? ' has-error' : ''}}">
              <label for="email">Email</label>
              <!-- "old" array holds old inputs -->
              <input type="text" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email}}">
              <!-- they will be shown here -->
              {% if errors.email %}
              <span class="help-block">{{ errors.email | first }}</span>
              {% endif %}
            </div>

            <div class="form-group{{ errors.name ? ' has-error' : ''}}">
              <label for="name">Name</label>
              <input type="name" name="name" id="name" class="form-control" value="{{ old.name}}">
              {% if errors.name %}
              <span class="help-block">{{ errors.name | first }}</span>
              {% endif %}
            </div>

            <div class="form-group{{ errors.password ? ' has-error' : ''}}">
              <label for="password">Password</label>
              <input type="password" name="password" id="password" class="form-control">
              {% if errors.password %}
              <span class="help-block">{{ errors.password | first }}</span>
              {% endif %}
            </div>
            <button type="submit" class="btn btn-default">Sign up</button>
            <!-- the hidden csrf field -->
            {{ csrf.field | raw }}
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
